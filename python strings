1)
n= input()
if n==n[::-1]:
    print("yes it is palindrome")
else:
    print("no it is palidrome")
2)
input_string = input()
vowels = "aeiouAEIOU"
vowels_count = 0
consonants_count = 0

for i in input_string:
    if i.isalpha():
        if i in vowels:
            vowels_count += 1
        else:
            consonants_count += 1

print("Vowels:", vowels_count)
print("Consonants:", consonants_count)

